<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.ChangePasswordActivity">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:text="Change Password"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="Let's verify your profile before you change your password.Please enter the OTP that has been sent to your registered mobile number."
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/enter_otp"
        android:padding="10dp"
        android:hint="Enter OTP"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/change_password_background"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/resend"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:text="Resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submit"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="end"
        android:textColor="@color/colorWhite"
        android:background="@drawable/upgrade_subscription"
        android:textAllCaps="false"
        android:text="Submit"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>