<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


<!--    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient"
        app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<ImageView
    android:visibility="gone"
    android:id="@+id/image_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="sgjkl"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/video_title"
        android:text="sgjkl"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

        <RatingBar
            android:rating="3.5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="sgjkl"
            android:textColor="@color/colorYellow"
            android:textSize="5dp"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/edit"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/save"
                    android:text="Save"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginLeft="10dp"

                    android:id="@+id/delete"
                    android:text="Delete"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        <View
          android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/shortlist"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/orange_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorRed"
                android:text="Add to Watchlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:id="@+id/share"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/share_blue"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            <TextView

                android:textSize="14sp"
                android:textColor="@color/colorRed"
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/download_video"

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"

                    android:src="@drawable/red_download"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView

                    android:textSize="14sp"
                    android:textColor="@color/colorRed"
                    android:text="Download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"

            />
            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:text="abbshsh"
                android:layout_marginTop="5dp"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/relative_startcast"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorRed"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/start_cast"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"

                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:text="STAR CAST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/circular_greaterthan"
                   android:layout_alignParentEnd="true"
                    android:text="STAR CAST"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_gravity="start"
                    android:background="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView

                        android:id="@+id/rate_this"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="2dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textColor="@color/colorYellow"
                        android:text="Rate this movie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginLeft="2dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toRightOf="@+id/rate_this"
                        android:id="@+id/view_relate"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorYellow"

                        />

                    <RatingBar
                        android:rating="5"

                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/view_relate"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:text="sgjkl"
                        android:textColor="@color/colorYellow"
                        android:textSize="5dp"
                        android:id="@+id/rating_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_centerVertical="true"

                        android:layout_toRightOf="@+id/rating_pending"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/recommended"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:text="RECOMMENDED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/view_all"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:text="VIEW ALL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
