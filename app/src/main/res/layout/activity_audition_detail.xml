<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.AuditionDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLightBlue"
        app:popupTheme="@style/AppTheme.NoActionBar" >

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="sgjkl"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"

                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/video_title"
                    android:text="sgjkl"
                    android:textColor="@color/colorRed"
                    android:textSize="18sp"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RatingBar
                android:rating="3.5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="sgjkl"
                android:textColor="@color/colorYellow"
                android:textSize="5dp"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/shortlist"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/orange_heart"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorRed"
                        android:text="Add to Watchlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/share"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:src="@drawable/share_blue"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView

                        android:textSize="14sp"
                        android:textColor="@color/colorRed"
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:id="@+id/download_video"

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"

                        android:src="@drawable/red_download"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView

                        android:textSize="14sp"
                        android:textColor="@color/colorRed"
                        android:text="Download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                />
            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:text="abbshsh"
                android:layout_marginTop="5dp"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_gravity="start"
                    android:background="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView

                        android:id="@+id/rate_this"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="2dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textColor="@color/colorYellow"
                        android:text="Rate this movie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginLeft="2dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toRightOf="@+id/rate_this"
                        android:id="@+id/view_relate"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorYellow"

                        />

                    <RatingBar
                        android:rating="5"

                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/view_relate"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:text="sgjkl"
                        android:textColor="@color/colorYellow"
                        android:textSize="5dp"
                        android:id="@+id/rating_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_centerVertical="true"

                        android:layout_toRightOf="@+id/rating_pending"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/recommended"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:text="RECOMMENDED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/view_all"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:text="VIEW ALL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>