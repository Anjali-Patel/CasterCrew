<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.GetTrustedBadgesActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorLightBlue"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">
<LinearLayout
android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/men"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:text="Members trust &amp; respond to profiles with verified information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                >
               <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/colorBlack"
                       android:textSize="18sp"
                       android:text="Identity Badge"
                       android:textAllCaps="false"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/colorBlack"
                       android:textSize="14sp"
                       android:text="Let members be able to trust your Age,Name and date of Birth."
                       android:textAllCaps="false"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView

                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="15dp"
                       android:textSize="16sp"
                       android:text="To get this bade,upload your Driving License or PAN Card or Passport.(This will not shown to any member) "
                       android:textAllCaps="false"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <Button
                       android:id="@+id/choose_document"
                       android:layout_marginBottom="15dp"
                       android:layout_marginTop="20dp"
                       android:layout_weight="1"
                       android:padding="15dp"
                       android:textAllCaps="false"
                       android:textColor="@color/colorBlack"
                       android:text="Choose Document"
                       android:background="@drawable/button_back"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:text="Professional Badge"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:text="Let members be able to trust your Occupation,Salary and Education details."
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:text="To get this bade,upload your Driving License or PAN Card or Passport.(This will not shown to any member) "
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/education_certificate"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:text="Education Certificate"
                            android:background="@drawable/button_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Button
                            android:id="@+id/salary_slip"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:text="Salary slip"
                            android:background="@drawable/button_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:text="Profile Badge"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:text="Let members be able to trust your Profile Photo."
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:text="Your profile does not have an image.Add a picture before we can verify it. "
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/profie_bage"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:text="Add profile Picture"
                        android:background="@drawable/button_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:text="Social Badge"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:text="Let members be able to trust your profile better with your social account linked."
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/facebook"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:text="Facebook"
                        android:background="@drawable/button_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>