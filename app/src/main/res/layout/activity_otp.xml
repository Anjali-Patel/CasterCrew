<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_margin="16dp">
        <TextView
            android:text="LOGIN VIA OTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView_login"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:text="Enter your Email id / Registered mobile No and we'll send you an OTP to your registered mobile."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView_mail"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_below="@+id/textView_login"
            android:layout_marginTop="18dp"
            android:textColor="#000"
            android:textStyle="normal"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView_mail"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the Mobile Number"
                android:paddingLeft="6dp"
                android:inputType="number"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:layout_below="@+id/TextInputLayout2"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="Submit"/>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_below="@+id/btn_submit"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginTop="469dp" />



    </RelativeLayout>
</RelativeLayout>
