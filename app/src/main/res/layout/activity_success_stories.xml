<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.SuccessStoriesActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorLightBlue"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <!--<ImageView-->
            <!--android:id="@+id/back_button"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:src="@drawable/ic_arrow_back_black_24dp"-->
            <!--android:layout_width="35dp"-->
            <!--android:layout_height="35dp" />-->

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="17dp"
                android:text="Success Stories"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/enable_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:padding="17dp"
                android:text="Enable All"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_gravity="center"
               android:textAllCaps="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="17dp"
               android:text="1 Million\nhappy job selection &amp; counting..."
               android:textColor="@color/colorPurple"
               android:textSize="16sp" />
           <View
               android:layout_marginTop="10dp"
               android:background="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="1dp"/>
           <LinearLayout
               android:layout_gravity="center"

               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_gravity="center"

                   android:src="@drawable/samantha_eleven"
                   android:layout_width="30dp"
                   android:layout_height="30dp" />
               <TextView
                   android:layout_gravity="center"
                   android:textAllCaps="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="17dp"
                   android:text="Highest number of documented job selections online"
                   android:textSize="14sp" />
           </LinearLayout>

           <View
               android:layout_marginTop="15dp"
               android:background="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="1dp"/>
           <LinearLayout
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_gravity="center"
                   android:textAllCaps="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="17dp"
                   android:text="The next success story here\ncould be yours"
                   android:textSize="14sp" />
               <Button
                   android:id="@+id/go_premium"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_weight="1"
                   android:padding="15dp"
                   android:textColor="@color/colorWhite"
                   android:background="@drawable/upgrade_subscription"
                   android:textAllCaps="true"
                   android:text="Go Premium"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>



       </LinearLayout>
   </ScrollView>


</LinearLayout>