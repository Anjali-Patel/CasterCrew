<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.SubscriptionDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLightBlue"
        app:popupTheme="@style/AppTheme.NoActionBar" >

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:text="Dear User\n Your subscription in CasterCrew has been done successfully."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TableLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/table_layout1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow>

        <TextView
            android:text="User Id "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_weight="1"

            android:id="@+id/u_uid"
            android:text="Anjali Patel "
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </TableRow>
        <TableRow>

            <TextView
                android:text="Ammount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"

                android:id="@+id/ammount"
                android:text="100 "
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow>

            <TextView
                android:text="Package Name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/pack_name"
                android:text="Diamond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow>

            <TextView
                android:text="Validity "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/validity"
                android:text="90 days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </TableRow>
        <TableRow>

            <TextView
                android:text="Transaction Id "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/transcation_id"
                android:text="TABSH90"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>
    </TableLayout>
    <Button
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite"
        android:text="Done"
        android:padding="5dp"
        android:id="@+id/done"
        android:textAllCaps="false"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
</LinearLayout>