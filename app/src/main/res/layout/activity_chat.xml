<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ChatActivity">



    <ImageView

           android:layout_marginTop="10dp"
        android:id="@+id/men_icon"
            android:layout_marginLeft="10dp"
            android:src="@drawable/men"
            android:layout_width="50dp"
            android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/men_icon"
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R Kumar"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/name_user"
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="70dp"
                android:text="Active 1 hour ago"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
<ImageView
    android:id="@+id/call"
android:layout_alignParentEnd="true"
    android:layout_marginTop="30dp"
    android:layout_marginRight="50dp"
    android:src="@drawable/call"
    android:layout_width="20dp"
    android:layout_height="20dp"/>

   <View
       android:id="@+id/view1"
       android:layout_marginTop="10dp"
       android:layout_below="@+id/preview"
       android:background="#E5E8E8"
       android:layout_width="match_parent"
       android:layout_height="1dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/view1"
        android:src="@drawable/live_chat"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <TextView
        android:id="@+id/t1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:text="Initiate conversation to know more about him!"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<Button
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/upgrading_now"
    android:textSize="16sp"
    android:layout_marginRight="20dp"
    android:textAllCaps="false"
    android:textColor="@color/colorWhite"
    android:text="@string/Upgrading_Now"
    android:layout_below="@+id/t1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="10dp"

        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgrading_now"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="9">


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="5">
            <EditText

                android:id="@+id/Message"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:gravity="start"
                android:hint="Type message"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:padding="20dp"
                android:textSize="16sp" />


        </LinearLayout>

        <ImageView
          android:layout_marginBottom="10dp"
            android:id="@+id/Send"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:src="@drawable/sendicon" />
    </LinearLayout>
