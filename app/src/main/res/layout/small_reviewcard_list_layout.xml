<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/relative1"
    android:layout_marginTop="8dp"
    android:layout_width="180dp"
    android:layout_marginBottom="3dp"
    android:elevation="100dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/video_image"
            android:src="@drawable/samantha_profile"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <TextView
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/video_title"
            android:text="ALA VAIKUNTHPURAMALLU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"

            android:textSize="10sp"
            android:id="@+id/date"
            android:text="2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_weight="5"
                android:transformPivotX="0dp"
                android:scaleX=".3"
                android:scaleY=".3"
                android:isIndicator="false"
                android:rating="5"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:id="@+id/shortlist"
                android:src="@drawable/orange_heart"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:layout_marginRight="20dp"

                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:id="@+id/download"
                android:src="@drawable/red_download"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>


        <LinearLayout

            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:id="@+id/profile_pic"
                android:src="@drawable/samantha_eleven"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_gravity="center"

                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"
                    android:text="MohanKrishana Reddy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:textSize="8dp"
                    android:text="Actor"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
