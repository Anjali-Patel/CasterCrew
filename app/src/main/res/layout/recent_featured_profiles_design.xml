<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:id="@+id/rev_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="100dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/iv_image1"
                android:layout_width="120dp"
                android:elevation="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        app:sriv_border_color="#1b8edc"
        app:sriv_border_width="1dp"
        app:sriv_left_bottom_corner_radius="16dp"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_bottom_corner_radius="16dip"
        app:sriv_right_top_corner_radius="16dp" />
    <ImageView
        android:id="@+id/online_offline"
        android:src="@drawable/red_dot"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_image"
        android:layout_alignParentTop="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />
     </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"

                android:background="@drawable/follow_button"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_below="@id/iv_image1"
                android:layout_alignParentEnd="true"
                android:id="@+id/linear_following_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/follow_count"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/btn_follow"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"

                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nautilus"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_follow"
                    android:layout_below="@id/iv_image1"
                    android:text="follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/iv_image1">

                <TextView
                android:paddingStart="5dp"
                android:paddingEnd="15dp"
                android:id="@+id/member_ship"
                android:textSize="10sp"
                android:textColor="@color/colorIndigo"
                android:textAllCaps="false"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Membership"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/crown"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_toEndOf="@+id/member_ship"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"
                android:text="Verified"
                android:gravity="center"
                android:textAllCaps="false"
                android:id="@+id/verified"
                android:layout_marginTop="3dp"
                android:drawableStart="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:layout_toEndOf="@+id/verified"
                android:layout_marginStart="20dp"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:background="@color/colorLightBlue"
                android:text="19"
                android:textSize="10sp"
                android:id="@+id/uid"
                android:textColor="#fff"/>

            <TextView
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColor="#000"
                android:id="@+id/name"
                android:textSize="14sp"
                android:text="name"
                android:textStyle="bold"
                android:layout_below="@+id/member_ship"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingStart="5dp"
                android:id="@+id/designation"
                android:layout_below="@+id/name"
                android:textSize="12sp"
                android:text="Artist"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:textStyle="italic"
                android:id="@+id/talent_title"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/designation"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="Hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/talent_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="09/01/2019"
                android:textColor="@color/colorPrimary"
                android:id="@+id/date"
                />


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layoutt"
                android:gravity="start"
                android:layout_toLeftOf="@+id/linear_following_button"
                android:layout_below="@+id/iv_image1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/email"
                    android:layout_weight="1"
                    android:src="@drawable/chat_icon"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="15dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:background="#d3d3d3"/>

                <ImageView
                    android:id="@+id/call"
                    android:src="@drawable/call_icon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"

                    android:layout_height="15dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:background="#d3d3d3"/>

                <ImageView
                    android:id="@+id/download"
                    android:src="@drawable/red_download"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"

                    android:layout_height="15dp"/>
                            <View
                                android:layout_width="1dp"
                                android:visibility="gone"
                                android:layout_height="fill_parent"
                                android:background="#d3d3d3"/>

                <ImageView
                    android:id="@+id/like_icon"
                    android:src="@drawable/orange_heart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"

                    android:layout_height="15dp"/>
            </LinearLayout>
        </RelativeLayout>

